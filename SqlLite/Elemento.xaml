<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqlLite.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eliminar/Actualizar Postulantes"></Label>
            <Entry x:Name="txtNombre" Placeholder="nombre"></Entry>
            <Entry x:Name="txtEmail" Placeholder="email"></Entry>
            <Entry x:Name="txtPassword" Placeholder="password"></Entry>

            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"></Button>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>